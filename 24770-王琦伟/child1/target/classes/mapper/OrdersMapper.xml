<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.dao.OrdersMapper">

    <resultMap id="ordersExtResultMap" type="com.hand.vo.OrdersExt">
        <id column="number" property="number"/>
        <result column="createtime" property="createtime"/>
        <association property="user" select="com.hand.dao.UserMapper.findUserByid" column="user_id"/>
        <collection property="ordersItems" ofType="com.hand.vo.OrdersItemVo">
            <result column="name" property="name"/>
            <result column="price" property="price"/>
            <result column="items_num" property="num"/>
        </collection>
    </resultMap>

    <select id="findOrdersExts" parameterType="com.hand.vo.OrdersExt" resultMap="ordersExtResultMap">
       SELECT
    orders.id,
    orders.`number`,
    orders.createtime,
    items.`name`,
    items.price,
    orderdetail.items_num,
    orders.user_id
    from orders left join orderdetail on orders.id = orderdetail.orders_id
    left join items on orderdetail.items_id = items.id
    where 1 = 1
    <if test="o.name != null">
        and items.`name` = #{o.name}
    </if>
    <if test="o.number != null">
        and orders.number = #{o.number}
    </if>
    <if test="o.createtimeStart != null">
       and orders.createtime > #{o.createtimeStart}
    </if>
    <if test="o.createtimeEnd != null">
        <![CDATA[and orders.createtime < #{o.createtimeEnd}]]>
    </if>
   </select>

</mapper>