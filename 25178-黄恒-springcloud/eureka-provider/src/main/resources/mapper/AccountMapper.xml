<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.dao.AccountDao">
    <select id="getAccount" parameterType="java.lang.Integer" resultType="com.hand.entity.Account">
        select id,name,money from account
        <where>
            <if test="id!=null">
                and id = #{id}
            </if>
        </where>
    </select>

    <delete id="delAccount" parameterType="java.lang.Integer">
        delete from account
        <where>
            <choose>
                <when test="id!=null">
                    and id = #{id}
                </when>
                <otherwise>
                    and 1 = 2
                </otherwise>
            </choose>
        </where>
    </delete>

    <insert id="addAccount" parameterType="com.hand.entity.Account">
        <selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER">
            select last_insert_id();
        </selectKey>
        insert into account(name,money) values(#{name},#{money});
    </insert>

    <update id="updAccount" parameterType="com.hand.entity.Account" >
        update account set name = #{name} , money = #{money} where id = #{id}
    </update>
</mapper>