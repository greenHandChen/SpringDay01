<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hgh.dao.mapper.OrderMapper">

    <resultMap id="orderVOList" type="Orders">
        <result property="id" column="id"/>
        <result property="number" column="number"/>
        <result property="createtime" column="createtime"/>
        <result property="note" column="note"/>
        
        <association property="user" javaType="User">
            <id column="user_id" property="id"/>
            <result column="username" property="username"/>
            <result column="address" property="address"/>
        </association>
    </resultMap>

    <resultMap id="OrderOfItsDetails" type="OrderVO" extends="orderVOList">
        <collection property="orderDetail" ofType="OrderDetail">
            <id column="id" property="id"/>
            <result column="items_id" property="itemsId"/>
            <result column="items_num" property="itemsNum"/>
        </collection>
    </resultMap>

    <select id="findOrderInfoByLazyLoad" resultMap="lazyLoadRstMap" parameterType="_integer">
        select * from orders where id = #{id}
    </select>
    <resultMap id="lazyLoadRstMap" type="OrderVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="number" property="number"/>
        <result column="note" property="note"/>

        <association property="user" select="org.hgh.dao.mapper.OrderMapper.findUserById" column="user_id"/>
    </resultMap>
    <select id="findUserById" parameterType = "java.lang.Integer" resultType="User">
        select * from user where id = #{id}
    </select>

    <select id="findOrderVOs" resultMap="lazyLoadRstMap" parameterType="OrderVO">
        select
            u.username username,
            u.address address,
            o.id orderNumber,
            i.name orderName,
            i.price,
            o.createtime createTime,
            i.price * od.items_num sumnum
        from items i,orders o,orderdetail od,user u
        where o.user_id = u.id
        and od.orders_id = o.id
        <if test="orderNumber != null and orderNumber != ''">
        and o.id = #{orderNumber}
        </if>
        <if test="orderName != null and orderName != ''">
            and i.name = #{orderName}
        </if>
        <if test="price != null and price != ''">
            and i.price = #{price}
        </if>
        <if test="(createtimeStart != null and createtimeStart != '')and (createtimeStop != null and createtimeStop != '')">
            and o.createtime between createtimeStart and createtimeStop
        </if>
        <if test="(priceStart != null and priceStart != '')and (priceStop != null and priceStop != '')">
            and i.price between priceStart and priceStop
        </if>
    </select>

</mapper>

