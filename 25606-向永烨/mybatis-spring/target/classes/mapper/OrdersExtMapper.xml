<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace命名空间，作用就是对sql进行分类化管理，理解sql隔离
注意：使用mapper代理方法开发，namespace有特殊重要的作用
-->
<mapper namespace="com.yonye.mybatis.mapper.OrdersExtMapper">



    <select id="selectTest" resultType="com.yonye.mybatis.pojo.User">
        select* from user
    </select>

    <select id="findOrdersExts" parameterType="com.yonye.mybatis.pojo.OrdersExt" resultMap="ordersAndUserRstMap">
        select
        u.username,u.address,o.id,items.name,items.price,o.createtime,
        sum(items.price*orderdetail.items_num) as total_amount

        from orders o,user u,orderdetail od,items it
        where o.user_id=u.id
        and o.id=od.orders_id
        and od.items_id=it.id
    </select>
    <resultMap id="ordersAndUserRstMap" type="com.yonye.mybatis.pojo.OrdersExt">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="number" property="number"/>
        <result column="note" property="note"/>
        <association property="user" javaType="com.yonye.mybatis.pojo.User">
            <id column="user_id" property="id"/>
            <result column="username" property="username"/>
            <result column="address" property="address"/>
        </association>
        <collection property="orderdetails" javaType="com.yonye.mybatis.pojo.Orderdetail">
            <id column="detailId" property="id"/>
            <result column="items_id" property="itemsId"/>
            <result column="items_num" property="itemsNum"/>
            <association property="items" javaType="com.yonye.mybatis.pojo.Items" select="selectItems"/>
        </collection>


    </resultMap>
    <select id="selectItems" parameterType="com.yonye.mybatis.pojo.Items" resultType="com.yonye.mybatis.pojo.Items">
        select * from items
    </select>





