<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.providertest.Mapper.UserMapper">
    <!-- 查询所有用户数据 -->
    <select id="findUserAll" resultType="User">
       select * from user;
    </select>
    <!--根据id查用户-->
    <select id="findUserById" parameterType="int" resultType="User">
        select * from user where id=#{id};
    </select>
    <!--判断是否有id的用户-->
    <select id="findUserId" parameterType="int" resultType="int">
        select count(*) from user where id=#{id};
    </select>
    <!-- 添加一个新用户 -->
    <insert id="addUser" parameterType="User">
        insert into user(username,birthday,sex,address) values (#{username},NOW(),#{sex},#{address})
    </insert>
    <!-- 根据id修改用户信息 -->
    <update id="updateUserById" parameterType="User">
        update user set username=#{username},address=#{address},sex=#{sex},birthday=now() where id=#{id};
    </update>
