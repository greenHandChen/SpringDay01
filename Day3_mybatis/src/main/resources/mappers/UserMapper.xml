<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zbh.hand.mappers">
    <resultMap id="baseMap" type="zbh.hand.pojo.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="birthday" property="birthday"/>
        <result column="sex" property="sex"/>
        <result column="address" property="address"/>
    </resultMap>
    <select id="selectUserById" parameterType="java.lang.Integer" resultType="zbh.hand.pojo.User">
        select * from user where id=#{id}
    </select>
    <select id="selectUserByUsername" parameterType="java.lang.String" resultMap="baseMap">
        select * from user where username like '%${value}%'
    </select>
    <insert id="addUser" parameterType="zbh.hand.pojo.User">
        <selectKey order="AFTER" resultType="java.lang.Integer" keyProperty="id">
            select @@identity
        </selectKey>
        insert into user values(#{id},#{username},#{birthday},#{sex},#{address})
    </insert>
</mapper>