<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!--	<properties resource="classpath:jdbc.properties"/>-->
	<!-- 别名 包以其子包下所有类   头字母大小都行-->
	<typeAliases>
<!-- 		<typeAlias type="com.hand.mybatis.pojo.User" alias="User"/>-->
		<package name="com.hand.mybatis.pojo"/>
	</typeAliases>
	<!-- 和spring整合后 environments配置将废除    -->
	<environments default="development">
		<environment id="development">
			<!-- 使用jdbc事务管理 -->
			<transactionManager type="JDBC" />
			<!-- 数据库连接池 -->
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url"
					value="jdbc:mysql://localhost:3306/mybatis?characterEncoding=utf-8" />
				<property name="username" value="root" />
				<property name="password" value="" />
			</dataSource>
		</environment>
	</environments>
	
	<!-- Mapper的位置  Mapper.xml 写Sql语句的文件的位置 -->
	<mappers>
 		<mapper resource="sqlmap/User.xml" />

<!--		此种放法要求Mapp接口和Mapp映射文件同名并且放在同一目录下-->
<!--		<mapper class="com.hand.mybatis.mapper.UserMapper" />-->
<!-- 		<mapper resource="sqlmap/User.xml" class="" url=""/> -->
<!-- 		<mapper class="com.itheima.mybatis.mapper.UserMapper" />-->
<!-- 		<mapper url="" /> -->
		<!--		此种放法要求Mapp接口和Mapp映射文件同名并且放在同一目录下-->
		<package name="com.hand.mybatis.mapper"/>
	</mappers>
</configuration>
