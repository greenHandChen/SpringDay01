<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- set方法注入 -->
    <bean name="myStudent" class="com.hand.bean.Student" init-method="init" destroy-method="destroy" autowire="byType">
        <property name="stu_id" value="01"/>
        <property name="stu_name" value="小李"/>
        <property name="myTeacher" ref="myTeacher"/>
        <property name="mobile" value="1,3,8,3,2,3,4,5,4,3"/>
        <property name="tMap">
            <map>
                <entry key="x1" value="test1"/>
                <entry key="x2" value="test2"/>
                <entry key="x3" value="test3"/>
                <entry key="x4" value="test4"/>
            </map>
        </property>
    </bean>

    <bean name="myTeacher" class="com.hand.bean.Teacher">
        <property name="t_id" value="01"/>
        <property name="t_name" value="李老师"/>
    </bean>

