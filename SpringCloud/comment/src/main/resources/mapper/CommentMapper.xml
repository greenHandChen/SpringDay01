<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.comment.mapper.CommentMapper">
    <select id="findById" parameterType="Integer" resultType="comment">
        select * from comment where id = #{id}
    </select>

    <select id="findAll" resultType="comment">
        select * from comment
    </select>

    <insert id="addComment" parameterType="comment">
        insert into comment (id, message) values (#{id}, #{message})
    </insert>

    <update id="updateComment" parameterType="comment">
        update comment set message = #{message} where id = #{id}
    </update>

    <delete id="deleteComment" parameterType="Integer">
        delete from comment where id = #{id}
    </delete>
</mapper>