<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springcloudtest.dao.UserDao">
    <resultMap id="userResultMapper" type="springcloudtest.entities.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="birthday" property="birthday"/>
        <result column="sex" property="sex"/>
        <result column="address" property="address"/>
    </resultMap>

    <select id="listUsers" resultMap="userResultMapper">
        select * from user
    </select>
    <select id="getUserById" resultType="springcloudtest.entities.User">
        select * from user where id=#{id}
    </select>
</mapper>