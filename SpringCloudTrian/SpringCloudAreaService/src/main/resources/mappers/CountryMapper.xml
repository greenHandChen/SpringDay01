<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.service.area.dao.CountryDao">
    <insert id="add" parameterType="com.hand.service.area.pojo.Country">
        insert into country(country_name) values(#{countryName})
    </insert>
    <update id="update" parameterType="com.hand.service.area.pojo.Country">
        update country
        set country_name=#{countryName}
        where id=#{id}
    </update>
    <delete id="delete" parameterType="java.lang.Integer">
        delete from country where id=#{id}
    </delete>
    <select id="findAll" resultMap="countryResultMap">
        select * from country
    </select>
    <select id="findById" parameterType="java.lang.Integer" resultMap="countryResultMap">
        select * from country where id=#{id}
    </select>
    <resultMap id="countryResultMap" type="com.hand.service.area.pojo.Country">
        <id property="id" column="id"/>
        <result property="countryName" column="country_name"/>
    </resultMap>
</mapper>