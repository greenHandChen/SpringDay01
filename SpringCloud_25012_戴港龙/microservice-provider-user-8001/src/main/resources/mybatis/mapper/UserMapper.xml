<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dragon.springcloud.mapper.UserMapper">
    <select id="findUserById" parameterType="int" resultType="com.dragon.springcloud.entities.User">
        select userId,userName,dbsource from user where userId = #{id};
    </select>

    <select id="findUserList" resultType="com.dragon.springcloud.entities.User">
        select userId,userName,dbsource from user;
    </select>

    <insert id="addUser" parameterType="com.dragon.springcloud.entities.User">
        insert into user(userName,dbsource) values(#{userName},database());
    </insert>

    <update id="updateUser" parameterType="com.dragon.springcloud.entities.User">
        update user set userName=#{userName} where userId=#{userId}
    </update>

    <delete id="deleteUserById" parameterType="int">
        delete from user where userId=#{id}
    </delete>
</mapper>