<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="day04_mybatis.mapper.OrdersExt3Mapper">

    <!--一对一的-->
    <resultMap id="ordersAndUserRstMap" type="day04_mybatis.domain.ext.OrdersExt3">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="number" property="number"/>
        <result column="note" property="note"/>

        <association property="user" javaType="day04_mybatis.domain.User">
            <id column="user_id" property="id"/>
            <result column="username" property="username"/>
            <result column="address" property="address"/>
        </association>
    </resultMap>
    
    <!--一对多的-->
    <resultMap id="ordersAndOrderDeatilRsMap" type="day04_mybatis.domain.ext.OrdersExt3" extends="ordersAndUserRstMap">
        
        <collection property="orderdetails" ofType="day04_mybatis.domain.Orderdetail">
            <id column="id" property="id"/>
            <result column="items_id" property="itemsId"/>
            <result column="items_num" property="itemsNum"/>
        </collection>
    </resultMap>
    
    
    
    <select id="findOrdersExt" parameterType="day04_mybatis.domain.ext.OrdersExt3" resultMap="ordersAndOrderDeatilRsMap">
        SELECT
        *
        from orders o,user u,orderdetail od
        where o.user_id = u.id
        and od.orders_id = o.id
        <if test="id != null">
            and o.id = #{id}
        </if>
    </select>
    

    
</mapper>