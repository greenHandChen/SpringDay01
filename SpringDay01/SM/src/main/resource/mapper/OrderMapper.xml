<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.mapper.OrderMapper">

    <select id="findOrdersExt" parameterType="OrdersExt" resultType="OrdersExt">
        select o.id,o.user_id,o.number,o.createtime,o.note,
        u.username,u.address from orders o,user u
        where o.user_id=u.id
        <if test="id != null">
            and o.id=#{id}
        </if>
    </select>
<resultMap id="ordersAddUserRstMap" type="OrdersExt">
    <id column="id" property="id"/>
    <result column="username" property="userName"/>
    <result column="address" property="address"/>
    <result column="note" property="note"/>
    <association property="user" javaType="domain.User">
        <id column="id" property="id"/>
        <result column="username" property="userName"/>
        <result column="address" property="address"/>
    </association>
</resultMap>

    <select id="findOrdersAndOrderDetail" parameterType="OrdersExt" resultMap="OrdersAndOrderDetailMap">
        select o.id,o.user_id,o.number,o.createtime,o.note,
        u.username,u.address ,
        od.id detailId,od.items_id, od.items_num
        from orders o,user u,orderdetail od
        where o.user_id=u.id
        and o.id=od.orders_id
        <if test="id != null">
            and o.id=#{id}
        </if>
    </select>
<resultMap id="OrdersAndOrderDetailMap" type="OrdersExt" extends="ordersAddUserRstMap">
    <association property="user" select="mapper.UserMapper.findById" column="user_id"/>
    <collection property="orderDetails" ofType="domain.Orderdetail">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="note" property="note"/>
    </collection>

</resultMap>
    <!--延迟加载-->
    <select id="findOrderLazyLoad" parameterType="java.lang.Integer" resultMap="lazyLoadRetMap">
        select * from orders where id=#{id}
    </select>
    <resultMap id="lazyLoadRetMap" type="OrdersExt">
        <id column="detailId" property="id"></id>
        <result column="items_id" property="itemsId"/>
        <result column="items_num" property="itemsNum"/>
    </resultMap>
</mapper>