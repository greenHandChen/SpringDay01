    <select id="findOrdersExts" parameterType="com.hand.entity.OrdersExt" resultType="com.hand.entity.OrdersExt">
        select u.username,u.address,o.id,i.name,i.price,o.createtime,round(o.number*i.price,2) total_amount
        from orders o,user u,orderdetail od,items i
        where u.id = o.user_id
        and o.id = od.orders_id
        and od.items_id = i.id
        and o.id = #{id}
    </select>
</mapper>