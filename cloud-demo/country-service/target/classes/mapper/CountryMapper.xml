<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.countryservice.dao.CountryMapper">

    <resultMap id="BaseResultMap" type="com.hand.countryservice.domain.Country">
        <id property="countryId" column="country_id"/>
        <result property="countryName" column="country_name"/>
    </resultMap>


    <select id="findAll" resultMap="BaseResultMap">
       select * from country
   </select>

    <select id="findById" parameterType="int" resultMap="BaseResultMap">
       select * from country where country_id = #{id}
   </select>

    <insert id="save" parameterType="com.hand.countryservice.domain.Country">
        insert into country(country_name) values(#{countryName})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete from country where country_id = #{id}
    </delete>

    <update id="updateById">
        update country
        <set>
            <if test="countryName != null">
                country_name=#{countryName}
            </if>
        </set>
        where country_id = #{countryId}
    </update>

</mapper>