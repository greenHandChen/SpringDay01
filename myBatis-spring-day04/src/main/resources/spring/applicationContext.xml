<!--     </bean>-->

    <!--  批量配置mapper代理类,默认bean的Id为类名,首字母小写 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <!--    配置要扫描的包    -->
        <property name="basePackage" value="com.ll.ms.mapper"/>
        <!--    默认不再配置SqlSessionFactory(只有一个SqlSessionFactory时),  单独配置也可以  -->
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>



</beans>