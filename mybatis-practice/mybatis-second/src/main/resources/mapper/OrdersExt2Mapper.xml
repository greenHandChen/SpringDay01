<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jqh.mapper.OrdersExt2Mapper">

    <select id="findByUserId" parameterType="java.lang.Integer" resultMap="extMap">
        select o.id,o.user_id,o.number,o.createtime,o.note,u.username,u.address
        from orders o,user u where o.user_id=u.id
            and o.user_id=#{userId}
    </select>

    <resultMap id="extMap" type="com.jqh.pojo.OrdersExt2">
        <id property="id" column="id"></id>
        <association property="user" column="user_id" javaType="com.jqh.pojo.User">
            <id property="id" column="user_id"></id>
        </association>
    </resultMap>

    <resultMap id="latterLoad" type="com.jqh.pojo.OrdersExt2">
        <id property="id" column="id"></id>
        <association property="user" column="user_id" select="findUserById">
        </association>
    </resultMap>

    <select id="findUserById" parameterType="java.lang.Integer" resultType="com.jqh.pojo.User">
SELECT * from user where id=#{id}
</select>
    <select id="findByUserIdLoad" parameterType="java.lang.Integer" resultMap="extMap">
        select o.id,o.user_id,o.number,o.createtime,o.note,u.username,u.address
        from orders o,user u where o.user_id=u.id
            and o.user_id=#{userId}
    </select>
</mapper>