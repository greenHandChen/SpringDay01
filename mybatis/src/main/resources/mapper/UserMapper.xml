<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.mapper.UserMapper">
    <select id="findUserById" parameterType="int" resultType="com.hand.entity.User">
        select * from user where id = #{id};
    </select>

    <insert id="insertUserReturnId" parameterType="com.hand.entity.User">
        <selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into user(username,sex,birthday,address) values(#{username},#{sex},SYSDATE(),#{address});
    </insert>
</mapper>