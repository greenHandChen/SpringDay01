<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org//dat/mybatis-3-mapper.dtd">
<mapper namespace="Dao.OrdersMapper">
    
    <resultMap id="ordersAndUserVoMap" type="Vo.OrdersVo">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="number" property="number"/>
        <result column="note" property="note"/>

        <association property="user" javaType="Domin.User">
        <id column="user_id" property="id"/>
        <result column="username" property="username"/>
        <result column="address" property="address"/>
        </association>
    </resultMap>
    <select id="findorderVoMap" parameterType="Vo.OrdersVo" resultMap="ordersAndUserVoMap">
        select o.id,
        o.user_id,
        o.number,
        o.createtime,
        o.note,
        u.username,
        u.address
        from orders o ,user u
        where o.user_id = u.id
        <if test="id != null">
            and o.id = #{id}
        </if>
    </select>
    <select id="findOrderInfoByLazyLoad" parameterType="java.lang.Integer" resultMap="lazyLoadRstMap">
        select * from orders where id =#{id}
    </select>
    <resultMap id="lazyLoadRstMap" type="Vo.OrdersVo">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="number" property="number"/>
        <result column="note" property="note"/>

        <association property="user" select="Dao.UserMapper.findUserById" column="user_id"/>
    </resultMap>
    <select id="findOrderVo" parameterType="Vo.OrdersVo" resultType="Vo.OrdersVo">
        select o.id,
            o.user_id,
            o.number,
            o.createtime,
            o.note,
            u.username,
            u.address
        from orders o ,user u
        where o.user_id = u.id
        <if test="id != null">
            and o.id = #{id}
        </if>
    </select>
    <resultMap id="ordersAndOrderDetailVoMap" type="Vo.OrdersVo" extends="ordersAndUserVoMap">
        <collection property="orderDetails" ofType="Domin.OrderDetail">
            <id column="id" property="id"/>
            <result column="items_id" property="itemId"/>
            <result column="items_num" property="itemsNum"/>
        </collection>
    </resultMap>
    <select id="findordersAndOrderDetailVoMap" parameterType="Vo.OrdersVo" resultMap="ordersAndOrderDetailVoMap">
        select o.id,
        o.user_id,
        o.number,
        o.createtime,
        o.note,
        u.username,
        u.address,
        od.id detailId,
        od.items_id,
        od.items_num
        from orders o,user u,orderdetail od
        where o.user_id = u.id
        and o.id = od.orders_id
        <if test="id != null">
            and o.id = #{id}
        </if>
    </select>
</mapper>


