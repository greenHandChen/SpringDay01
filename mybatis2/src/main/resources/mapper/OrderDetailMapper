<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.dao.OrderDetailMapper">
    <select id="findOrdersAndOrderDetails"  parameterType="com.hand.domain.OrderExt" resultMap="ordersAndOrderDetailRstMap">
        select o.user_id,o.createtime,o.note,u.username,u.address,od.id detailId,od.items_id,od.items_num
        from orders o,user u,orderdetail od
        where  o.user_id = u.id
        and o.id = od.orders_id
       <if test="id != null">
            and o.id = #{id}
        </if>
    </select>
    <resultMap id="ordersAndOrderDetailRstMap" type="com.hand.domain.OrderExt" extends="ordersAndUserRstMap">
        <collection property="orderDetails" ofType="com.hand.domain.OrderDetail">
            <id column="detailId" property="id"/>
            <result column="items_id" property="itemsId"/>
            <result column="items_num" property="itemsNum"/>
        </collection>
    </resultMap>
    <resultMap id="ordersAndUserRstMap"  type="com.hand.domain.OrderExt">
            <result property="username" column="username"></result>
            <result property="address" column="address"/>
            <association property="user" column="userId" javaType="com.hand.domain.User">
                <id property="id" column="user_id" />
                <result property="username" column="username"/>
                <result property="address" column="address"/>
            </association>
    </resultMap>
</mapper>