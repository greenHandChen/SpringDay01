<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.masirhh.mybatis2.mapper.orderMapper">


	<resultMap id="OrdersExtByMap" type="com.masirhh.mybatis2.beans.orderExtByMap">
		<id column="id" property="id"/>
		<result column="user_id" property="user_id"/>
		<result column="number" property="number"/>
		<result column="note" property="note"/>
		<association property="userBean" javaType="com.masirhh.mybatis2.beans.userBean">
			<id column="user_id" property="id"/>
			<result column="username" property="username"/>
			<result column="address" property="address"/>
		</association>
	</resultMap>


	<resultMap id="OrdersExtByMap1" type="com.masirhh.mybatis2.beans.orderExtDdd">
		<id column="id" property="id"/>
		<result column="user_id" property="user_id"/>
		<result column="number" property="number"/>
		<result column="note" property="note"/>
		<association property="userBean" javaType="com.masirhh.mybatis2.beans.userBean">
			<id column="user_id" property="id"/>
			<result column="username" property="username"/>
			<result column="address" property="address"/>
		</association>
	</resultMap>
	<resultMap id="DetailsDDD" type="com.masirhh.mybatis2.beans.orderExtDdd" extends="OrdersExtByMap1">

		<collection property="orderdetail" ofType="com.masirhh.mybatis2.beans.orderdetailsBean">
			<id column="detailId" property="id"/>
			<result column="items_id" property="items_id"/>
			<result column="items_num" property="items_num"/>
		</collection>
	</resultMap>


    <select id="findOrdersExtByType" resultType="com.masirhh.mybatis2.beans.orderExtByType">
    SELECT
	    o.id,
	    o.user_id,
	    o.number,
	    o.createtime,
	    o.note,
	    u.username,
	    u.address
    FROM
	    orders AS o
	INNER JOIN `user` AS u ON o.user_id = u.id
    </select>

	<select id="findOrdersExtByMap" resultMap="OrdersExtByMap">
	SELECT
	    o.id,
	    o.user_id,
	    o.number,
	    o.createtime,
	    o.note,
	    u.username,
	    u.address
    FROM
	    orders AS o
	INNER JOIN `user` AS u ON o.user_id = u.id
	</select>

	<select id="findDetailsDDD" resultMap="DetailsDDD">
	SELECT
		o.id,
		o.user_id,
		o.number,
		o.createtime,
		o.note,
		u.username,
		u.address,
		od.id AS detailId,
		od.items_id,
		od.items_num
	FROM
		orders AS o
	INNER JOIN `user` AS u ON o.user_id = u.id
	INNER JOIN orderdetail AS od ON od.orders_id = o.id
	</select>


</mapper>