<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.dao.OrderMapper">
    <select id="findOrderInfoByLazyLoad" parameterType="java.lang.Integer" resultMap="lazyLoadRstMap">
        select * from orders where id =#{id}
    </select>
    <resultMap id="lazyLoadRstMap" type="com.hand.domain.Orders">
        <result property="userId" column="user_id"/>
        <association property="user" column="user_id" select="com.hand.dao.UserMapper.findUserById"></association>
    </resultMap>

</mapper>