<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hand.dao.OrderMapper">

    <!--根据订单ID查询用户的信息-->
    <select id="findOrdersExt" parameterType="com.hand.entity.OrdersExt" resultType="com.hand.entity.OrdersExt">
        select o.order_id,
        o.user_id,
        o.createtime,
        o.number,
        o.note,
        u.username,
        u.address
        from orders o,user1 u
        where o.user_id=u.user_id
        <if test="order_id != null">
            and o.order_id = #{order_id}
        </if>
    </select>

    <select id="findOrdersByResultMap" parameterType="com.hand.entity.OrdersExt" resultMap="ordersAndUserResultMap">
        select o.order_id,o.user_id,o.number,o.note,u.user_id,u.username,u.address
        from user1 u,orders o where u.user_id=o.user_id and o.order_id=#{order_id}
    </select>
    <resultMap id="ordersAndUserResultMap" type="com.hand.entity.OrdersExt">
        <id column="order_id" property="order_id"></id>
        <result column="user_id" property="user_id"></result>
        <result column="number" property="number"></result>
        <result column="note" property="note"></result>
        <result column="username" property="username"></result>
        <result column="address" property="address"></result>

        <association property="user" javaType="com.hand.entity.User">
            <id column="user_id" property="user_id"></id>
            <result column="username" property="username"></result>
            <result column="address" property="address"></result>
        </association>

    </resultMap>

    <select id="findOrdersAndDetails" resultMap="orderAndDetailsResultMap">
        select o.order_id,o.user_id,o.number,o.createtime,o.note,u.username,u.address,od.item_id,od.item_num
        from user1 u,orders o,ordertails od
        where u.user_id=o.user_id and o.order_id=od.order_id and o.order_id=#{order_id}
    </select>
    <resultMap id="orderAndDetailsResultMap" extends="ordersAndUserResultMap" type="com.hand.entity.OrdersExt">
        <collection property="orderDetails" ofType="com.hand.entity.OrderDetails">
            <id column="detail_id" property="detail_id"></id>
            <result column="item_id" property="item_id"></result>
            <result column="item_num" property="item_num"></result>
        </collection>
    </resultMap>

    <!--延迟加载-->
    <select id="findOrderAndLazyLoad" parameterType="java.lang.Integer" resultMap="lazyLoadResultMap">
        select * from orders where order_id = #{order_id}
    </select>
    <resultMap id="lazyLoadResultMap" type="com.hand.entity.OrdersExt">
        <id column="order_id" property="order_id"></id>
        <result column="user_id" property="user_id"></result>
        <result column="number" property="number"></result>
        <result column="note" property="note"></result>
        
        <association property="user" select="com.hand.dao.OrderMapper.findUserByIdLazyLoad" column="user_id"></association>
    </resultMap>
    <select id="findUserByIdLazyLoad" parameterType="java.lang.Integer" resultType="com.hand.entity.User">
        select * from user1 where user_id=#{user_id}
    </select>

    <insert id="addUser" parameterType="com.hand.entity.User">
        insert into user1(user_id,username,address) values(#{user_id},#{username},#{address})
    </insert>
</mapper>