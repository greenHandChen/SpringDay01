<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhang.countryprovider.dao.CountryDao">

    <select id="showCountry" resultType="com.zhang.countryprovider.pojo.Country">
        select id,countryname from country1
    </select>

    <select id="findCountryById" parameterType="java.lang.Integer" resultType="com.zhang.countryprovider.pojo.Country">
        select id,countryname from country1 where id=#{id}
    </select>

    <insert id="addCountry" parameterType="com.zhang.countryprovider.pojo.Country">
        insert into country1(countryname) VALUES(#{countryname})
    </insert>

    <delete id="deleteCountry" parameterType="com.zhang.countryprovider.pojo.Country">
        delete id,countryname from country1 where id=#{id}
    </delete>

    <update id="updateCountry" parameterType="com.zhang.countryprovider.pojo.Country">
        update country1 set countryname=#{countryname} where id=#{id}
    </update>

</mapper>