<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhang.userprovider.dao.UserDao">

    <select id="getAllUsers" resultMap="userMap">
        select id,username,age,address,country_id from user1
    </select>
    <resultMap id="userMap" type="User">
        <id column="id" property="id"></id>
        <result column="username" property="username"></result>
        <result column="age" property="age"></result>
        <result column="address" property="address"></result>
        <result column="country_id" property="country_id"></result>
    </resultMap>

    <insert id="addUser" parameterType="com.zhang.userprovider.pojo.User">
        insert into user1(username,age,address) VALUES(#{username},#{age},#{address})
    </insert>
    <delete id="deleteUser" parameterType="com.zhang.userprovider.pojo.User">
        delete from user1 where id=#{id}
    </delete>

    <update id="updateUser" parameterType="com.zhang.userprovider.pojo.User">
        update user1 set username=#{username},age=#{age},address=#{address} where id=#{id}
    </update>

</mapper>