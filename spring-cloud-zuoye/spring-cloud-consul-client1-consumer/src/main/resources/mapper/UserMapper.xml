<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springcloudconsulclient.mapper.UserMapper">
<cache/>
    <select id="findUserById" parameterType="Integer" resultType="User">
        select * from user where id=#{id}
    </select>

    <select id="findUserByUser" parameterType="User" resultType="User">
        select * from user
        <where>
            <if test="username!=null">
                username=#{username}
            </if>

            <if test="sex!=0 and sex!=null">
                and sex=#{sex}
            </if>
            <if test="birthday!=null">
                and birthday between #{birthday} and now()
            </if>
        </where>
    </select>
    <delete id="deleteUserInfo" parameterType="User" >
        delete from user
        <where>
            <if test="id!=null || id!=0">
                id=#{id}
            </if>
            <if test="username!=null">
                and username=#{username}
            </if>
            <if test="birthday!=null ">
                and birthday between #{birthday} and now()
            </if>
            <if test="sex!=null and sex!=0">
                and sex=#{sex}
            </if>

        </where>
    </delete>
    <insert id="insertUserInfo" parameterType="User" >
        insert into user
        <trim prefix="("  suffix=")" suffixOverrides=",">
            <if test="username!=null">
                username,
            </if>
            <if test="birthday!=null">
                birthday,
            </if>
            <if test="sex!=null and sex!=0">
                sex,
            </if>
            <if test="address!=null ">
                address
            </if>
    </trim>
        <trim prefix="values("  suffix=")" suffixOverrides=",">
                <if test="username!=null">
                    #{username},
                </if>
                <if test="birthday!=null">
                    #{birthday},
                </if>
                <if test="sex!=null and sex!=0">
                    #{sex},
                </if>
                <if test="address!=null ">
                    #{address}
                </if>
        </trim>
    </insert>

    <update id="updateUserInfo" parameterType="User" >
        update user
        <set>
        <trim suffixOverrides=",">
            <if test="username!=null">
                 username=#{username},
            </if>
            <if test="birthday!=null ">
                 birthday=#{birthday},
            </if>
            <if test="sex!=null and sex!=0">
                 sex=#{sex},
            </if>
            <if test="address!=null ">
             address=#{address},
            </if>
        </trim>
        </set>
            <where>
                <if test="id!=null and id!=0">
                    id=#{id}
                </if>

            </where>
    </update>
</mapper>
