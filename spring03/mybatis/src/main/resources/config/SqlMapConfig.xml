<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--引入外部数据库配置文件-->
    <properties resource="config/db.properties" />


    <!--类型别名-->
    <typeAliases>
        <!--单个别名定义-->
        <typeAlias type="com.lzn.mybatis.entity.TestUserEntity" alias="testUserEntity"/>

        <!--批量别名的定义，别名取的是类名，不区分大小写-->
        <package name="java.lang" />
        <package name="com.lzn.mybatis.pojo"/>
        <package name="com.lzn.mybatis.entity"/>
    </typeAliases>

    <!--配置 mybatis的环境信息，比如数据源以及事务控制，整合 spring后就交给 springd控制-->
    <environments default="development">
        <environment id="development">
            <!--配置 JDBC事务控制，由 mybatis进行管理-->
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="${db.driver}"/>
                <property name="url" value="${db.url}"/>
                <property name="username" value="${db.username}"/>
                <property name="password" value="${db.password}"/>
            </dataSource>
        </environment>
    </environments>

    <!--价值映射配置文件-->
    <mappers>
        <mapper resource="mapper/UserEntityMapper.xml"/>
        <mapper resource="mapper/UserMapper.xml"/>
        <mapper resource="mapper/UserQueryMapper.xml" />
    </mappers>
</configuration>