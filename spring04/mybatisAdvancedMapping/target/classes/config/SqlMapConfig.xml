<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--引入外部数据库配置文件-->
    <properties resource="config/db.properties" />

    <settings>
        <!--是否开启来加载，mybatis默认为 false， false表示立即加载-->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!--是否开启积极来加载，默认为 true， true表示来加载对象可能被任何属性进行加载， false表示按需加载-->
        <setting name="aggressiveLazyLoading" value="false"/>

        <!--开启二级缓存，默认时关闭的-->
        <setting name="cacheEnabled" value="true"/>

        <!--打印查询语句-->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>
    <!--类型别名-->
    <typeAliases>
        <!--批量别名的定义，别名取的是类名，不区分大小写-->
        <package name="java.lang" />
        <package name="com.lzn.spring.entity"/>
    </typeAliases>

    <!--配置 mybatis的环境信息，比如数据源以及事务控制，整合 spring后就交给 springd控制-->
    <environments default="development">
        <environment id="development">
            <!--配置 JDBC事务控制，由 mybatis进行管理-->
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="${db.driver}"/>
                <property name="url" value="${db.url}"/>
                <property name="username" value="${db.username}"/>
                <property name="password" value="${db.password}"/>
            </dataSource>
        </environment>
    </environments>

    <!--价值映射配置文件-->
    <mappers>

        <package name="com.lzn.spring.dao"/>
    </mappers>
</configuration>