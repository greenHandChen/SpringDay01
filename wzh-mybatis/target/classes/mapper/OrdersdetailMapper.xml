<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzh.mapper.OrdersdetailMapper">

    <resultMap id="baseMap" type="com.wzh.domain.Ordersdetail">
        <id column="id" property="id"/>
        <result column="items_num" property="itemsNum"/>
        <association property="items" select="com.wzh.mapper.ItemsMapper.findItemsById" column="items_id">
        </association>
    </resultMap>
    <select id="findDetailById" resultMap="baseMap">
    select * from  orderdetail
</select>


</mapper>